@{
    ViewData["Title"] = "Transfer";
}
<h1>Transfer</h1>


@{
    string message = Convert.ToString(TempData["Message"] ?? string.Empty);
    var isSuccess = Convert.ToBoolean(TempData["isSuccess"] ?? false);
}
@if (Convert.ToBoolean(TempData["isSuccess"]))
{
    <div id="divAlert" class="alert alert-@(isSuccess ? "success" : "danger")" role="alert">
        @message
<form method="post" action="/Wallet/Transfer">
    <div class="mb-3">
        <label for="txtFromMobileNO" class="form-label">From Mobile No</label>
        <input type="text" name="FromMobileNo" class="form-control" id="txtFromMobileNO">
    </div>
}
<div class="card align-items-center" style="width: 18rem;">
    <div class="card-body">
        <form class="row g-3" method="post" action="/Wallet/Transfer">

            <div class="col-md-12">
                <label for="FromMobileNo" class="form-label">From</label>
                <input type="text" name="FromMobileNo" class="form-control" id="FromMobileNo" required>
            </div>
    <div class="mb-3">
        <label for="txtToMobileNo" class="form-label">To Mobile No</label>
        <input type="text" name="ToMobileNO" class="form-control" id="txtToMobileNo">

            <div class="col-md-12">
                <label for="ToMobileNo" class="form-label">To</label>
                <input type="text" name="ToMobileNo" class="form-control" id="ToMobileNo" required>
    </div>

            <div class="col-md-12">
                <label for="Amount" class="form-label">Amount</label>
                <input type="text" name="Amount" class="form-control" id="Amount" required>
    <div class="mb-3">
        <label for="txtAmount" class="form-label">Amount</label>
        <input type="text" name="Amount" class="form-control" id="txtAmount">
    </div>

            <div>
                <button type="button" class="btn btn-outline-warning">Cancel</button>
                <button type="submit" class="btn btn-outline-primary float-end">Transfer</button>
    <div class="right">
        <a class="btn btn-secondary" href="/Wallet/Transfer">Cancel</a>
        <button type="submit" class="btn btn-success" id="btnSave">Transfer</button>
    </div>

</form>
    </div>
</div>
